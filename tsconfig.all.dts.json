{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.dts.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "jsx": "react",
        "paths": {
            "@donecollectively/stellar-contracts": ["./index.ts"],
            "@donecollectively/stellar-contracts/HeliosProgramWithCacheAPI": ["./src/helios/HeliosProgramWithMockCacheAPI.ts"],
            "@donecollectively/stellar-contracts/ui": ["./src/ui/index.ts"],
            "@donecollectively/stellar-contracts/testing": ["./src/testing/index.ts"],
            "@donecollectively/stellar-contracts/rollup-plugins": ["./rollup-plugins.ts"]
            // "*": ["src/*", "../src/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "files": [
        "index.ts",
        "./src/ui/index.ts",
        "./src/HeliosPromotedTypes.ts",
        "./src/testing/index.ts",
        "./rollup-plugins.ts",
        "./src/@types/heliosModule.d.ts",
        "./src/helios/HeliosProgramWithMockCacheAPI.ts",
        "./src/@types/svg.d.ts",

    ],
    "exclude": ["dist/**/*", "**/node_modules/"]
}
