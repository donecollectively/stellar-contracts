{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "ESNext",
        "module": "NodeNext",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "moduleResolution": "NodeNext",
        "importHelpers": true,
        "baseUrl": ".",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "experimentalDecorators": true,
        // "emitDecoratorMetadata": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "noImplicitAny": false,
        "rootDir": ".",
        "outDir": "lib"
    },
    "files": [ "index.ts" ],
    "include": [
        "src/**/*.hl",
        "src/**/*.ts", 
        "src/**/*.js", 
    ],
    "exclude": ["**/node_modules/"]
}
