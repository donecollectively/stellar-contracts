{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "noEmit": false,
        "allowJs": true,
        "declaration": true,
        // "emitDeclarationOnly": false,
        "declarationMap": true,
        // "sourceMap": true, // provided by esbuild?
        "allowSyntheticDefaultImports": true,
        "allowArbitraryExtensions": true,
        "skipLibCheck": true,

        "target": "ESNext",
        "lib": ["esnext", "dom"],
        "module": "preserve",
        "esModuleInterop": true,        
        "types": ["node", "vitest/globals"],
        "verbatimModuleSyntax": true,

        "moduleResolution": "bundler",
        // "traceResolution": true,
        "customConditions": ["dev"],
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        // "isolatedModules": false,
        "experimentalDecorators": true,
        // "emitDecoratorMetadata": false,

        "outDir": "dist/types",
        // "outFile": none!
        "importHelpers": true,
        "rootDir": ".",

        // "exactOptionalPropertyTypes": true,        
        "noImplicitAny": false,
        "noErrorTruncation": true,

        "paths": {
            "@donecollectively/stellar-contracts/HeliosProgramWithCacheAPI": ["./dist/programWIthFakeCacheAPI.mjs"],
            "@donecollectively/stellar-contracts": ["./src/index.ts"],
            "@donecollectively/stellar-contracts/contracts/*": ["./dist/contracts/*"],
            "src/*": ["./src/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "files": [
         "index.ts", 
        //  "src/@types/heliosModule.d.ts",
         "src/ui/index.ts",
         "src/testing/index.ts",
     //"src/helios/HeliosScriptBundle.js" 
     ],
    "include": [
        "./src/@types/**/*.d.ts",
        "./src/**/*.hl",
        "./src/**/*.ts", 
        "./src/**/*.js",
        "test/**/*.ts", 
        "test/**/*.hl"
    ],
    "exclude": [
        "**/node_modules/",
        "dist/**/*",
    ]
}
