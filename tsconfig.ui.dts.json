{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.dts.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./.stellar/api",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src/ui/**/*.ts",
    "src/ui/**/*.tsx",
    "src/types/**/*.ts"
  ],
  "exclude": []
} 