            print("checking for CreatingNewSpendDelegate");

            otherMintedValue : Value = replaceExisting.switch {
                Some{oldTokenName} => {
                    BURNED: Int = -1;
                    Value::new(
                        AssetClass::new(mph, oldTokenName), 
                        BURNED
                    )
                },
                None => Value::ZERO
            };

            updatingCharter : Int = 1; // general update to charter

                        //!todo change this one
