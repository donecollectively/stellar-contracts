                                        pdChange.action.switch {
                                            Add => {
                                                ( prevManifestRemainder, nextCMEs.tail )
                                            },
                                            _ => { // Remove, Replace => {
                                                ( prevManifestRemainder.delete(pdChange.name.unwrap()), nextCMEs.tail )
                                            }
                                        }
                                    }, // reducer
                                    previousManifest, // init1
