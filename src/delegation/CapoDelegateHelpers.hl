func mustReturnValueToScript(
    value : Value, 
    ctx : ScriptContext,
    tokenName: ByteArray = #
) -> Bool {
    if (!returnsValueToScript( value, ctx)) {
        error(" ‚ùå dgTkn not returned: " + tokenName.decode_utf8())
        // error("the authZor token MUST be returned")
    };
    true
}

